<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="android:alertDialogTheme">@style/DialogTheme</item>
    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="android:alertDialogTheme">@style/DialogTheme</item>
    </style>


    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">?android:colorBackground</item>

        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>
    
    
    <style name="TransparentActionBarLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorLightGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="colorTimerViewBackgroundArc">@color/colorLightGrey</item>
        <item name="colorTimerViewForegroundArc">@color/colorAccent</item>
        <item name="colorTimerViewText">@color/colorDarkGrey</item>

        <item name="colorStopSkipButton">@color/colorDarkGrey</item>
        <item name="colorStartPauseButton">@color/colorWhite</item>
        <item name="colorTextView">@color/colorDarkGrey</item>
    </style>

    <style name="TransparentActionBarDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="colorTimerViewForegroundArc">@color/colorPrimaryDark</item>
        <item name="colorTimerViewBackgroundArc">@color/colorDarkGrey</item>
        <item name="colorTimerViewText">?android:textColorPrimary</item>

        <item name="colorStopSkipButton">@color/colorWhite</item>
        <item name="colorStartPauseButton">?android:colorBackground</item>
        <item name="colorTextView">@color/colorWhite</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation" >@android:anim/fade_out</item>
    </style>



    <style name="TimerActivityLight" parent="TransparentActionBarLight"/>

    <style name="TimerActivityDark" parent="TransparentActionBarDark"/>

</resources>
